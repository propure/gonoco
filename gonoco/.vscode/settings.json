{
    "go.gopath": "/mydev/golang:/mydev/golang/mygo_proj/gonoco:",
    "go.inferGopath": false,
    "go.formatTool": "goformat",
    "[go]": {
        "editor.insertSpaces": true,//按Tab键插入空格
        "editor.detectIndentation": false, //是否在打开文件时，基于文件内容自动检测editor.insertSpaces和editor.tabSize
        "editor.tabSize": 4, //一个制表符等于的空格数
        "editor.renderControlCharacters": true, //显示控制字符
        "editor.renderWhitespace": "all", //tab就显示为箭头，空格显示为.
        "editor.formatOnPaste": true,//粘贴时自动格式化
        "editor.formatOnSave": true,//保存时自动格式化
        "editor.codeActionsOnSave": {//保存时运行代码操作类型
            "source.organizeImports": true //运行Organize Imports操作
        },
        "editor.suggest.snippetsPreventQuickSuggestions": false
    },
    // "gopls": {
    //     "experimentalWorkspaceModule": true
    // }
}